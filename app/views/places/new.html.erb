<script>
  $(document).ready(function() {
  action();
  $('#place_description').on('keyup', action);
  function action(){
    if($('#place_description').val().length > 0){
      $('input[type=submit]').prop("disabled", false);
    } else {
      $("input[type=submit]").prop("disabled", true);
      }
    }
  });
</script>

